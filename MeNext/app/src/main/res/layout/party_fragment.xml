<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >

    <RelativeLayout
        android:background="@color/primary_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/party_title"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="0dp"
            android:textSize="30sp"
            android:text="Joined Parties"
            android:textColor="@color/white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/party_back"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft= "true"
            android:gravity="right|center_vertical"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/title_bar_icon_padding"
            android:paddingTop="@dimen/title_bar_icon_padding"
            android:paddingBottom="@dimen/title_bar_icon_padding"
            android:clickable="true"
            android:paddingRight="@dimen/title_bar_icon_padding"/>

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/party_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFF">

            <ListView
                android:id="@+id/party_submission_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </ListView>

            <ImageButton
                android:id="@+id/party_plus"
                android:layout_width="@dimen/round_button_diamter"
                android:layout_height="@dimen/round_button_diamter"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/add_button_margin"
                android:layout_marginEnd="@dimen/add_button_margin"
                android:tint="@android:color/white"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/oval"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <ProgressBar
                android:id="@+id/party_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>



    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
