<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/search_result_item_thumbnail"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_result_item_thumbnail"
        android:layout_toLeftOf="@+id/search_result_item_submit"
        android:orientation="vertical">
        <TextView
            android:id="@+id/search_result_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:ellipsize="none"
            android:maxLines="5"
            android:scrollHorizontally="false"/>
        <TextView
            android:id="@+id/search_result_item_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:ellipsize="none"
            android:maxLines="5"
            android:scrollHorizontally="false"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_result_item_submit"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:layout_margin="20dp"
        android:visibility="visible"
        android:clickable="true"
        android:layout_alignParentRight="true"
        />
    <ProgressBar
        android:id="@+id/search_result_item_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>