<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/party_submission_item_votes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/party_submission_item_upvote"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/party_submission_item_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="34"/>
        <ImageView
            android:id="@+id/party_submission_item_downvote"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/party_submission_item_thumbnail"
        android:background="@color/background_material_dark"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/party_submission_item_votes"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:id="@+id/party_submission_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/party_submission_item_thumbnail"
        android:orientation="vertical">
        <TextView
            android:id="@+id/party_submission_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:ellipsize="none"
            android:maxLines="5"
            android:scrollHorizontally="false"/>
        <TextView
            android:id="@+id/party_submission_item_username"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:ellipsize="none"
            android:maxLines="5"
            android:text="by: Joshua Vittum Makinen"
            android:scrollHorizontally="false"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/party_submission_item_remove"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:visibility="visible"
        android:clickable="true"
        android:layout_toRightOf="@+id/party_submission_name"
        android:src="@drawable/remove"
        />

    <ProgressBar
        android:id="@+id/party_submission_item_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>